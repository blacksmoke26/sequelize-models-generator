{
  "name": "node-ts-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "main": "src/main.js",
  "homepage": "https://github.com/jiifw/node-ts-boilerplate",
  "scripts": {
    "start": "node build/main.js",
    "clean": "rimraf coverage build tmp runtime && mkdir coverage runtime build",
    "build": "yarn run clean && babel src --out-dir ./build --extensions \".ts\"",
    "build:watch": "nodemon --exec babel-node ./src/main.ts --extensions \".ts\"",
    "build:debug": "nodemon --inspect --exec babel-node ./src/main.ts --extensions \".ts\"",
    "build:prod": "yarn run clean && babel src --out-dir ./build --extensions \".ts\" --minified --no-comments",
    "prebuild": "npm run lint",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --config .prettierrc --write .",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "boilerplate",
    "express",
    "fastify",
    "microservices",
    "typescript",
    "eslint",
    "serverless",
    "backend",
    "jest",
    "service",
    "back-end",
    "prettier",
    "project-template",
    "starter-template",
    "node-js",
    "nodejs-server",
    "typescript-boilerplate",
    "cjs-modules",
    "node-typescript-boilerplate"
  ],
  "author": {
    "name": "Junaid Atari",
    "email": "mj.atari@gmail.com",
    "url": "https://github.com/blacksmoke26"
  },
  "engines": {
    "node": ">= 16.16"
  },
  "license": "Apache-2.0",
  "dependencies": {
  },
  "devDependencies": {
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-jest": "~26.6.0",
    "prettier": "~2.6",
    "rimraf": "~3.0",
    "ts-jest": "~28.0",
    "tsutils": "~3.21",
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/node": "^7.18.6",
    "@babel/plugin-proposal-async-do-expressions": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@babel/plugin-proposal-do-expressions": "^7.18.6",
    "@babel/plugin-proposal-export-default-from": "^7.18.6",
    "@babel/plugin-proposal-throw-expressions": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.18.3",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^28.1.3",
    "@types/node": "~16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "babel-plugin-import": "^1.13.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.18.0",
    "faker": "^6.6.6",
    "jest": "^28.1.1",
    "lint": "^0.7.0",
    "nodemon": "^2.0.18",
    "supertest": "^6.2.3",
    "typescript": "^4.7.4"
  }
}
