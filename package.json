{
  "name": "node-ts-boilerplate",
  "version": "0.1.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "main": "dist/index.js",
  "homepage": "https://github.com/jiifw/node-ts-boilerplate",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec babel-node ./src/index.ts --extensions \".ts\"",
    "start:debug": "nodemon --inspect --exec babel-node ./src/index.ts --extensions \".ts\"",
    "clean": "rimraf coverage dist tmp runtime && mkdir coverage runtime dist",
    "prebuild": "npm run lint",
    "build": "yarn run clean && babel src --out-dir ./dist --extensions \".ts\"",
    "build:prod": "yarn run clean && babel src --out-dir ./dist --extensions \".ts\" --minified --no-comments",
    "lint": "eslint",
    "prettier": "prettier --config .prettierrc --write .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "boilerplate",
    "express",
    "fastify",
    "microservices",
    "typescript",
    "eslint",
    "serverless",
    "backend",
    "jest",
    "service",
    "back-end",
    "prettier",
    "project-template",
    "starter-template",
    "node-js",
    "nodejs-server",
    "typescript-boilerplate",
    "cjs-modules",
    "node-typescript-boilerplate"
  ],
  "author": {
    "name": "Junaid Atari",
    "email": "mj.atari@gmail.com",
    "url": "https://github.com/blacksmoke26"
  },
  "engines": {
    "node": ">=22"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/node": "^7.26.0",
    "@babel/plugin-proposal-async-do-expressions": "^7.25.9",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-proposal-do-expressions": "^7.25.9",
    "@babel/plugin-proposal-export-default-from": "^7.25.9",
    "@babel/plugin-proposal-throw-expressions": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@tsconfig/node16": "^16.1.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@types/supertest": "^6.0.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  }
}
